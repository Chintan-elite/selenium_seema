package exception;

class Bank
{
	double balance;
	
	public void getBalance()
	{
		System.out.println("Current balance : "+balance);
	}
	
	public void deposite(double amt)
	{
		balance = balance+amt;
	}
}


public class Customeexception {
	public static void main(String[] args) {
		
		Bank b = new Bank();
		b.getBalance();
		b.deposite(5000);
		
		b.getBalance();
	}
}
